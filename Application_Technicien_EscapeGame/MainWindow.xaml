                    <ColumnDefinition/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="300"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid x:Name="resa_part1" Grid.Column="0" Grid.Row="0" Visibility="{Binding VisibilityResaState1}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Client :" HorizontalAlignment="Left" FontSize="15" VerticalAlignment="Center" Style="{StaticResource FontFamilyLabel}"/>
                        <ComboBox HorizontalAlignment="Left" Margin="60 0 0 0" VerticalAlignment="Center" Height="25" Width="235" FontSize="15" Style="{StaticResource FontFamilyComboBox}" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}" SelectedIndex="{Binding SelectedClientIndex}"/>

                        <Image Source="images/euro.png" Grid.Column="1" HorizontalAlignment="Left" Height="25"/>
                        <Label Content="{Binding CreditsClient}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="25 0 0 0" Style="{StaticResource FontFamilyLabel}"/>

                        <!--<Label Content="Nombre de joueurs :" Grid.Row="1" HorizontalAlignment="Left" FontSize="15" VerticalAlignment="Center" Style="{StaticResource FontFamilyLabel}"/>
                        <ComboBox Grid.Row="1" HorizontalAlignment="Left" Margin="157 0 0 0" Height="25" Width="138" FontSize="15" Style="{StaticResource FontFamilyComboBox}" SelectedIndex="{Binding SelectedNbJoueurIndex}">
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="6"/>
                            <ComboBoxItem Content="7"/>
                        </ComboBox>-->

                        <Label Content="Date :" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15" Style="{StaticResource FontFamilyLabel}"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="53 0 0 0" FontSize="15" Width="115" Style="{StaticResource FontFamilyDatePicker}"/>
                        <Label Content="Heure :"  Grid.Row="2" Margin="165 0 0 0" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource FontFamilyLabel}"/>
                        <ComboBox Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Height="25" Width="70" Margin="225 0 0 0" Style="{StaticResource FontFamilyComboBox}" SelectedIndex="{Binding SelectedHorraireIndex}" SelectedValue="{Binding SelecteHoraire}" ItemsSource="{Binding HorairesDispos}"/>


                        <Button Content="Continuer" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Style="{StaticResource FontFamilyButton}" Command="{Binding NextResa}"/>
                        <Button Content="Annuler" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 82 0" Style="{StaticResource FontFamilyButton}" Command="{Binding CancelResa}"/>
                    </Grid>

                    <Grid x:Name="resa_part2" Grid.Row="0" Grid.Column="0" Visibility="{Binding VisibilityResaState2}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="270"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <ListBox Grid.Column="0" ItemsSource="{Binding Obstacles}" SelectedItem="{Binding SelectedObstacleToAdd}"/>

                            <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 30" IsEnabled="{Binding EnableAddObstacleButton}" Command="{Binding AddObstacleButton}" Content="{materialDesign:PackIcon Kind=ChevronDoubleRight}"/>
                            <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 30 0 0" IsEnabled="{Binding EnableRemoveObstacleButton}" Command="{Binding RemoveObstacleButton}" Content="{materialDesign:PackIcon Kind=ChevronDoubleLeft}"/>

                            <ListBox Grid.Column="2" ItemsSource="{Binding SelectedObstacles}" SelectedItem="{Binding SelectedObstacleToRemove}"/>
                        </Grid>

                        <Button Content="Continuer" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Style="{StaticResource FontFamilyButton}" Command="{Binding NextResa}"/>
                        <Button Content="Annuler" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 82 0" Style="{StaticResource FontFamilyButton}" Command="{Binding CancelResa}"/>
                        <Button Content="Retour" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 152 0" Style="{StaticResource FontFamilyButton}" Command="{Binding PrevResa}"/>
                    </Grid>

                    <Grid x:Name="resa_part3" Grid.Row="0" Grid.Column="0" Visibility="{Binding VisibilityResaState3}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="270"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ListBox Grid.Column="0" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedParticipantToAdd}"/>

                            <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 30" IsEnabled="{Binding EnableAddParticipantButton}" Command="{Binding AddParticipantButton}" Content="{materialDesign:PackIcon Kind=ChevronDoubleRight}"/>
                            <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 30 0 0" IsEnabled="{Binding EnableRemoveParticipantButton}" Command="{Binding RemoveParticipantButton}" Content="{materialDesign:PackIcon Kind=ChevronDoubleLeft}"/>

                            <ListBox Grid.Column="2" ItemsSource="{Binding SelectedParticipants}" SelectedItem="{Binding SelectedParticipantToRemove}"/>
                        </Grid>

                        <Button Content="Terminer" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Style="{StaticResource FontFamilyButton}" Command="{Binding NextResa}"/>
                        <Button Content="Annuler" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 74 0" Style="{StaticResource FontFamilyButton}" Command="{Binding CancelResa}"/>
                        <Button Content="Retour" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 144 0" Style="{StaticResource FontFamilyButton}" Command="{Binding PrevResa}"/>
                    </Grid>

                    <Grid x:Name="resa_part4" Grid.Row="0" Grid.Column="0" Visibility="{Binding VisibilityResaState4}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <Label Content="Client :" Style="{StaticResource FontFamilyLabel}" FontSize="15" HorizontalAlignment="Left"/>
                        <Label Content="{Binding SelectedClient}" Style="{StaticResource FontFamilyLabel}" FontSize="15" HorizontalAlignment="Left" Margin="55 0 0 0"/>
                        <Label Content="{Binding CreditsClient}" HorizontalAlignment="Right" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                        <Rectangle Fill="Black" Height="1" VerticalAlignment="Bottom"/>

                        <Grid Grid.Row="1" Margin="0 0 0 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <Label Name="nbJoueurs" Content="{Binding NbJoueurs}" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                            <Label Content="Participants" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                            <Label Name="prixJoueurs" Content="{Binding PrixParticipants}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>

                            <Label Name="nbObstacles" Content="{Binding NbObstacles}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                            <Label Content="Obstacles" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                            <Label Name="prixObstacles" Content="{Binding PrixObstacles}" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>

                            <Rectangle Fill="Black" Grid.Row="4" Grid.ColumnSpan="3" Height="1" VerticalAlignment="Top"/>
                            <Label Content="Total" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                            <Label Name="prixTotal" Content="{Binding PrixTotal}" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 12 0" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                            <Label Content="€" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource FontFamilyLabel}" FontSize="15"/>
                        </Grid>


                        <Button Content="Valider" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Style="{StaticResource FontFamilyButton}" Command="{Binding ValidResa}"/>
                        <Button Content="Annuler" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 66 0" Style="{StaticResource FontFamilyButton}" Command="{Binding CancelResa}"/>
                        <Button Content="Retour" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="10 5" Margin="0 0 136 0" Style="{StaticResource FontFamilyButton}" Command="{Binding PrevResa}"/>
                    </Grid>
                </Grid>
            </Grid>
            
            <!--Page de gestion compte-->
            <Grid x:Name="grd_userProfile" Grid.Row="1" Grid.Column="0" Margin="50 50" Visibility="{Binding VisibilityUser}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition MinWidth="300" Width="2*"/>
                    <ColumnDefinition MinWidth="300" Width="2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid x:Name="user_profile" Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" VerticalAlignment="Center" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="74"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Label Content="Pseudo :" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Label Content="{Binding UserPseudo}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Rectangle VerticalAlignment="Bottom" Grid.ColumnSpan="2" Height="0.2px" Fill="Black" Margin="0 0 0 2"/>

                    <Label Content="Nom :" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Label Content="{Binding UserNom}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Rectangle VerticalAlignment="Bottom" Grid.ColumnSpan="2" Grid.Row="1" Height="0.2px" Fill="Black" Margin="0 0 0 2"/>

                    <Label Content="Prénom :" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Label Content="{Binding UserPrenom}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Rectangle VerticalAlignment="Bottom" Grid.ColumnSpan="2" Grid.Row="2" Height="0.2px" Fill="Black" Margin="0 0 0 2"/>

                    <Label Content="Email :" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Label Content="{Binding UserEmail}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Rectangle VerticalAlignment="Bottom" Grid.ColumnSpan="2" Grid.Row="3" Height="0.2px" Fill="Black" Margin="0 0 0 2"/>

                    <Label Content="Tel :" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Label Content="{Binding UserTel}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Rectangle VerticalAlignment="Bottom" Grid.ColumnSpan="2" Grid.Row="4" Height="0.2px" Fill="Black" Margin="0 0 0 2"/>

                    <Label Content="DDN :" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <Label Content="{Binding UserDDN}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>

                    <Button Content="Modifier vos informations" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Cursor="Hand" FontSize="13" Height="auto" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4 2 5 4" Padding="0" Style="{StaticResource BtnForm}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding OpenChangeParams}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button Content="Modifier votre mot de passe" Grid.Column="0" Grid.Row="7" Visibility="Hidden" Grid.ColumnSpan="2" FontSize="13" Height="auto" Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4 2 5 4" Padding="0" Style="{StaticResource BtnForm}"/>

                </Grid>
                <Grid x:Name="user_change_params" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding VisibilityChangeParams}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="225"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Label Content="Pseudo :" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <TextBox Grid.Row="1" Text="{Binding TempPseudo}" Template="{StaticResource TextBoxUserProfile}" Style="{StaticResource TextBoxUserProfileStyle}"/>

                    <Label Content="Email :" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <TextBox Grid.Row="3" Text="{Binding TempEmail}" Template="{StaticResource TextBoxUserProfile}" Style="{StaticResource TextBoxUserProfileStyle}"/>

                    <Label Content="Téléphone :" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <TextBox Grid.Row="5" Text="{Binding TempTel}" Template="{StaticResource TextBoxUserProfile}" Style="{StaticResource TextBoxUserProfileStyle}"/>

                    <Label Content="DDN :" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0 -5 0 0" Style="{StaticResource FontFamilyLabel}"/>
                    <DatePicker Grid.Row="7" SelectedDate="{Binding TempDDN}" Style="{StaticResource FontFamilyDatePicker}" Margin="5 0" Padding="0 4 0 0"/>

                    <Button Grid.Row="8" Content="Valider" Height="30" Width="50" Style="{StaticResource BtnForm}" Foreground="White" Padding="5 5" VerticalAlignment="Bottom" Cursor="Hand">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding ValidChangeParams}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                
                <Grid x:Name="user_change_password" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="225"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Label Content="Ancien mot de passe :" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="20" Margin="0 -5 0 0"/>
                    <Label Content="Nouevau mot de passe :" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="20" Margin="0 -5 0 0"/>
                    <Label Content="Saisir à nouveau :" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="20" Margin="0 -5 0 0"/>

                    <PasswordBox Grid.Row="1" Margin="4 0" Height="30" Width="255" VerticalAlignment="Top" Template="{StaticResource PasswordBoxBorderRadiusUserProfile}" Style="{StaticResource PasswordBoxProfile}"/>
                    <PasswordBox Grid.Row="3" Margin="4 0" Height="30" Width="255" VerticalAlignment="Top" Template="{StaticResource PasswordBoxBorderRadiusUserProfile}" Style="{StaticResource PasswordBoxProfile}"/>
                    <PasswordBox Grid.Row="5" Margin="4 0" Height="30" Width="255" VerticalAlignment="Top" Template="{StaticResource PasswordBoxBorderRadiusUserProfile}" Style="{StaticResource PasswordBoxProfile}"/>
                    <Button Grid.Row="6" Content="Valider" Height="30" Width="50" Style="{StaticResource BtnForm}" Foreground="White" Padding="5 5" Margin="4 0" Cursor="Hand"/>
                </Grid>

                <Image Grid.Column="0"  Grid.Row="1" Source="images/profile.jpg"/>
                <Rectangle Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" HorizontalAlignment="Left" Width="2" Fill="Black" Visibility="{Binding VisibilityChangeParams}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
