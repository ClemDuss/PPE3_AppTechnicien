                <Label Content="{Binding Resa17.User}" Grid.Column="9" Grid.Row="2" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding OpenResa}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>

                <Rectangle Grid.Column="10" Grid.Row="2" Grid.ColumnSpan="1" Margin="-1 20 0 20" Fill="{Binding FillRect18}" Width="500" HorizontalAlignment="Left" Stroke="Black" StrokeThickness="2">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding OpenResa}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Rectangle>
                <Label Content="{Binding Resa18.User}" Grid.Column="10" Grid.Row="2" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding OpenResa}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>

                <Rectangle Grid.Column="11" Grid.Row="2" Grid.ColumnSpan="1" Margin="-1 20 0 20" Fill="{Binding FillRect19}" Width="500" HorizontalAlignment="Left" Stroke="Black" StrokeThickness="2">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding OpenResa}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Rectangle>
                <Label Content="{Binding Resa19.User}" Grid.Column="11" Grid.Row="2" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding OpenResa}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>

                <Rectangle Grid.Column="12" Grid.Row="2" Grid.ColumnSpan="1" Margin="-1 21 0 21" HorizontalAlignment="Left" Stroke="Black" StrokeThickness="2"/>

